<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-around">
        <div>
          <h2 class="mt-5 mb-5"><%= @event.txtAbout %></h2>
          <h3 class="mt-5 mb-5 text-center">Atividades do Evento <%= @event.name %></h3>
        </div>
    </div>

    <table class="table table-striped table-bordered mt-3">
      <thead>
        <tr>
          <th scope="col">Data</th>
          <th scope="col">Nome</th>
          <th scope="col">Título</th>
          <th scope="col">Palestrante</th>
          <th scope="col">Local</th>
          <th scope="col">Aberto para inscrições</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
          <tr>
            <td><%=  l(activity.period_start, format: :short) %> </td>
            <td><%= activity.name %></td>
            <td><%= activity.title %></td>
            <td><%= activity.speaker %></td>
            <td><%= activity.local %></td>
            <td><%= activity.subscriptions_open ? 'Sim' : 'Não' %></td>
            <td>
              <div>
                <%= link_to event_activity_path(@event.id, activity), class: 'btn btn-info me-2' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </div>
            </td>           
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'voltar' , event_path(@event), class: 'btn btn-secondary' %>
</div>