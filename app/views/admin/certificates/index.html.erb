<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-around">
        <h3>Certificados do Evento <%= @event.name %></h3>
      
    </div>

    <table class="table table-striped table-bordered mt-3">
      <thead>
        <tr>
          <th scope="col">Usuário</th>
            <th scope="col">Nº do Certificado</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
      <% @certificates.each do |certificate| %>
        <tr>
          <td><%= certificate.user.email %></td>
          <td><%= certificate.certificate_number %></td>
          <td>
            <%= link_to 'Ver', admin_event_certificate_path(@event, certificate), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'voltar' , admin_events_path, class: 'btn btn-secondary' %>
</div>