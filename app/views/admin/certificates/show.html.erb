<div class="container">
  <div class="row mt-4">

    <h1>Certificamos a participação <%= "#{@certificate.user.email}" %> no evento <%=  "#{@certificate.event.name}" %></h1>
    <h2>Data de emissão: <%= l(@certificate.created_at, format: :short) %></h2>
    <h3>Totalizando <%= @certificate.hours %> horas</h3>

    <h3>Atividades Participadas</h3>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Atividades</th>
          <th>Carga Horária</th>
        </tr>
      </thead>
      <tbody>
        <% @attended_activities.each do |activity| %>
          <tr>
            <td><%= activity.name %></td>
            <td><%= activity.certificate_hours %> horas</td>
          </tr>
        <% end %>
          
      </tbody>
    </table>
    <div class="text-center">
        <%= link_to "Download PDF", download_admin_event_certificate_path(@certificate),
            class: "btn btn-primary mt-3 mb-3", target: "_blank" %>
    </div>
  </div>
  <%= link_to 'voltar' , admin_events_path, class: 'btn btn-secondary' %>
</div>